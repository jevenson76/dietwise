{
  "name": "dietwise---your-personal-dieting-companion",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:mobile": "npm run build && cap sync && npm run test:e2e -- --project='Mobile Chrome' --project='Mobile Safari'",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "playwright:install": "npx playwright install --with-deps"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.0",
    "@capacitor/camera": "^7.0.1",
    "@capacitor/cli": "^7.4.0",
    "@capacitor/core": "^7.4.0",
    "@capacitor/ios": "^7.4.0",
    "@google/genai": "^1.4.0",
    "@zxing/library": "^0.21.3",
    "chart.js": "^4.4.9",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^3.2.4"
  }
}
